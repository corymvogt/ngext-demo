{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "paths": {
      "~": ["."],
      "~/*": ["./*"]
    }
  },
  "include": [
    ".",
    "pages",
    "components",
    "guards",
    "layouts",
    "node_modules/ngext"
  ]
}
